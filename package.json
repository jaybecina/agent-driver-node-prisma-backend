  "main": "src/server.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node-dev --poll src/server.ts",
    "build": "rm -rf ./dist && tsc",
    "start": "nodemon --max-old-space-size=4096 dist/server.js",
    "prisma:migrate-dev": "dotenv -e .env -- npx prisma migrate deploy",
    "prisma:migrate-prod": "dotenv -e .env.production -- npx prisma migrate deploy",
    "prisma:migrate-rollback": "dotenv -e .env.production -- npx prisma migrate resolve --rolled-back '20240430180743_init'",
    "prisma:studio-dev": "dotenv -e .env -- npx prisma studio",
    "prisma:studio-prod": "dotenv -e .env.production -- npx prisma studio",
    "build:docker-dev": "docker compose -f docker-compose.dev.yml up --build -d",
    "build:docker-prod": "docker compose up --build -d",
    "stop:docker-prod": "docker stop screenzads-backend-backend-1",
    "stop:docker-prod-all": "docker stop $(docker ps -q)"
  },
